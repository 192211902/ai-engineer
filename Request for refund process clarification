def get_refund_status_explanation(self, status: RefundStatus) -> str:
    """Get human-readable explanation of current refund status"""
    explanations = {
        RefundStatus.SUBMITTED: "Your refund request has been received and is in our queue for initial review.",
        RefundStatus.UNDER_REVIEW: "Our team is currently reviewing your refund request and verifying the details.",
        RefundStatus.VERIFICATION_REQUIRED: "We need additional information or documentation to process your refund.",
        RefundStatus.APPROVED: "Great news! Your refund has been approved and is being processed.",
        RefundStatus.REJECTED: "Unfortunately, your refund request has been rejected. You should receive an email with the reason.",
        RefundStatus.PROCESSED: "Your refund has been successfully processed and funds are being returned to your original payment method."
    }
    return explanations.get(status, "Status unknown. Please contact customer support for assistance.")

def get_next_steps_for_customer(self, request_id: str) -> List[str]:
    """Get actionable next steps for the customer based on current status"""
    if request_id not in self.requests:
        return ["Request not found. Please verify your request ID."]
    
    status = self.requests[request_id].status
    next_steps = {
        RefundStatus.SUBMITTED: [
            "Wait for our team to begin the initial review",
            "Check your email for any updates",
            "Ensure your contact information is current"
        ],
        RefundStatus.UNDER_REVIEW: [
            "No action required at this time",
            "Our team will contact you if additional information is needed",
            "Expected decision within 1-2 business days"
        ],
        RefundStatus.VERIFICATION_REQUIRED: [
            "Check your email for specific verification requirements",
            "Provide the requested documentation as soon as possible",
            "Contact support if you have questions about what's needed"
        ],
        RefundStatus.APPROVED: [
            "Your refund is being processed",
            "Funds will be returned to your original payment method",
            "Allow 1-5 business days for the funds to appear"
        ],
        RefundStatus.REJECTED: [
            "Review the rejection reason in your email",
            "Contact support if you believe this was an error",
            "You may be eligible to submit a new request with additional information"
        ],
        RefundStatus.PROCESSED: [
            "Your refund is complete",
            "Check your account/statement for the refund",
            "Contact your bank if funds don't appear within 5 business days"
        ]
    }
    return next_steps.get(status, ["Please contact customer support for assistance."])
