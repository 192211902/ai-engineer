            "estimated_time": "2-3 business days",
            "total_remaining": "2-5 business days"
        },
        RefundStatus.APPROVED: {
            "current_step": "Refund approved",
            "next_step": "Processing payment",
            "estimated_time": "1-3 business days",
            "total_remaining": "1-3 business days"
        },
        RefundStatus.REJECTED: {
            "current_step": "Refund rejected",
            "next_step": "Process complete",
            "estimated_time": "N/A",
            "total_remaining": "N/A"
        },
        RefundStatus.PROCESSED: {
            "current_step": "Refund processed successfully",
            "next_step": "Funds should appear in your account",
            "estimated_time": "1-5 business days (depending on bank)",
            "total_remaining": "Complete"
        }
    }
    return timelines.get(status, {
        "current_step": "Status unknown",
        "next_step": "Please contact support",
        "estimated_time": "N/A",
        "total_remaining": "N/A"
    })

